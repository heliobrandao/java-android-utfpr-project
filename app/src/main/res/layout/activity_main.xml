<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título do formulário -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/cadastro_vinho"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Nome do Vinho -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:labelFor="@id/editTextNomeVinho"
            android:text="@string/nome_do_vinho"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextNomeVinho"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:hint="@string/digite_o_nome_do_vinho"
            android:inputType="text"
            android:autofillHints="@string/digite_o_nome_do_vinho"
            android:importantForAutofill="yes" />

        <!-- Safra -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/editTextSafra"
            android:text="@string/safra_lb"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextSafra"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:hint="@string/hint_safra"
            android:inputType="number"
            android:autofillHints="@string/hint_safra"
            android:importantForAutofill="yes" />

        <!-- País de Origem -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/spinnerPais"
            android:text="@string/pais_de_origem"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerPais"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:entries="@array/paises_origem"
            android:spinnerMode="dialog" />

        <!-- Tipo de Vinho -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:labelFor="@id/radioGroupTipo"
            android:text="@string/tipo_de_vinho"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioTinto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tipo_tinto" />

            <RadioButton
                android:id="@+id/radioBranco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tipo_branco" />

            <RadioButton
                android:id="@+id/radioRose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tipo_rose" />

            <RadioButton
                android:id="@+id/radioEspumante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tipo_espumante" />

        </RadioGroup>

        <!-- Características do Vinho -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/caracteristicas_lb"
            android:textSize="16sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBoxSeco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/caracteristica_seco" />

        <CheckBox
            android:id="@+id/checkBoxDoce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/caracteristica_doce" />

        <CheckBox
            android:id="@+id/checkBoxFrutado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/caracteristica_frutado" />

        <CheckBox
            android:id="@+id/checkBoxTanico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/caracteristica_tanico"
            android:layout_marginBottom="16dp" />

        <!-- Comentários -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comentarios_lb"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextComentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_comentarios"
            android:inputType="textMultiLine"
            android:lines="3"
            android:gravity="top"
            android:layout_marginBottom="24dp"
            android:autofillHints="@string/hint_comentarios"
            android:importantForAutofill="yes" />

        <!-- Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonLimpar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/botao_limpar"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/button_gray"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/buttonSalvar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/botao_salvar"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/button_purple_light"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
