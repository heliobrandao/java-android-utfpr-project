<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título do formulário -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cadastro de Vinho"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/purple_700" />

        <!-- Nome do Vinho -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Vinho:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editTextNomeVinho"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:hint="Digite o nome do vinho"
            android:inputType="text" />

        <!-- Safra -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Safra:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextSafra"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:hint="Ex: 2020"
            android:inputType="number" />

        <!-- País de Origem -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="País de Origem:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerPais"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dialog" />

        <!-- Tipo de Vinho -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Vinho:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/radioGroupTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioTinto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tinto" />

            <RadioButton
                android:id="@+id/radioBranco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Branco" />

            <RadioButton
                android:id="@+id/radioRose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rosé" />

            <RadioButton
                android:id="@+id/radioEspumante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Espumante" />

        </RadioGroup>

        <!-- Características do Vinho -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Características:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkBoxSeco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seco" />

        <CheckBox
            android:id="@+id/checkBoxDoce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doce" />

        <CheckBox
            android:id="@+id/checkBoxFrutado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frutado" />

        <CheckBox
            android:id="@+id/checkBoxTanico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tânico"
            android:layout_marginBottom="16dp" />

        <!-- Comentários -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentários:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextComentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Suas impressões sobre o vinho"
            android:inputType="textMultiLine"
            android:lines="3"
            android:gravity="top"
            android:layout_marginBottom="24dp" />

        <!-- Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/buttonLimpar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Limpar"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/design_default_color_error" />

            <Button
                android:id="@+id/buttonSalvar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salvar"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/purple_700" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
